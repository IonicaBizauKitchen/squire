@import mixins

.navbar-inner
	position: relative
	background: linear-gradient(top, grayscale(80), rgb(40, 40, 45))
	border-top: 1px solid grayscale(255, 0.3)
	border-bottom: 1px solid grayscale(0, 0.75)
	box-shadow: 0px 1px 4px grayscale(0, 0.75)
	
	.brand
		color: rgb(200, 200, 200)

.main-container
	margin-top: 32px
	
	> article
		margin-top: 32px
		
		> header
			height: 34px
			border-bottom: 1px solid grayscale(210)
			
			h1
				font-size: 24px
				display: inline-block
				
				a
					color: grayscale(50)
			
			time
				margin-left: 12px
				color: grayscale(160)
				display: inline-block
		
		.content
			margin-top: 8px
			
			.intro-image
				width: 240px
				margin: 2px 8px 6px 0px
				float: left
			
			.read-more
				text-align: center
		
		&.full
			> header
				height: auto
				margin-bottom: 16px
				text-align: center
				
				h1
					font-size: 32px
					display: block
				
				time
					margin-bottom: 4px
					font-size: 14px
			
			.content
				.intro-image
					width: 500px
					margin: 0px auto 12px auto
					display: block
					float: none
	
	> footer
		margin-top: 32px
		padding: 12px 0px
		color: grayscale(160)
		border-top: 2px solid grayscale(225)
